@model List<Article>


<div class="widget">
	<h2 class="section-title mb-3">Önerilenler</h2>
	<div class="widget-body">
		<div class="widget-list">
			@foreach (var c in Model)
			{
				<a class="media align-items-center" href="@c.slugUrl">
					<img loading="lazy" decoding="async" src="@c.ImgUrl" alt="@c.Title" class="w-100">
					<div class="media-body ml-3">
						<h3 style="margin-top:-5px">@c.Title</h3>
					</div>
				</a>
			}

		</div>
	</div>
</div>