@model List<Article>


	@foreach (var c in Model)
	{
	<div class="col-md-6 mb-4">
		<article class="card article-card article-card-sm h-100">
		
		<a asp-controller="Blog" asp-action="Detail" id="@c.slugUrl">
			<div class="card-image">
				<div class="post-info">
					<span class="text-uppercase">@c.PublishTime</span>
				</div>
				<img loading="lazy" decoding="async" src="@c.ImgUrl" alt="@c.Title" class="w-100" width="420" height="280">
			</div>
		</a>
		<div class="card-body px-0 pb-0">
		<ul class="post-meta mb-2">
			<li>
					<a href="#!">@c.Category</a>
			</li>
		</ul>
			<h2><a class="post-title" href="@c.slugUrl">@c.Title</a></h2>
			<a class="read-more-btn" href="@c.slugUrl">Devamını Oku</a>
		</div>
		</article>
	</div>
	}